<% layout('/layouts/boilerplate') %>
<body>
    <div class="row">
        <div class="col-8 offset-3 mt-3">
            <h3>All Details :</h3>
        </div>
            <div class="card col-6 offset-3 show-card">
                <img class="card-img-top show-img" src="<%= listing.image %>" alt="list_img" >
                <div class="card-body">
                    <p class="card-text"><b><%= listing.title %></b><br>
                        <%= listing.description %> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN")%> <br>
                        <%= listing.location %> <br>
                        <%= listing.country %>
                    </p>
                </div>
            </div>
            <div class="col-8 offset-3 mt-3">
                <div class="btns">
                    <a href="/listings/edit/<%= listing.id %>">
                        <button class="btn btn-dark ml-2">Edit&nbsp;&nbsp;<i class="fas fa-edit"></i></button>
                    </a>&nbsp;&nbsp;&nbsp;&nbsp;
                    <form method="post" action="/listings/fire/<%= listing.id %>?_method=delete">
                        <button class="btn btn-dark edit-btn">Delete&nbsp;&nbsp;<i class="fa-solid fa-trash"></i></button>
                    </form>
                </div>
            </div>
        </div>
</body>
