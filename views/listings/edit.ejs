<% layout('/layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1>Edit Your Info</h1>
            <form method="post" action="/listings/update/<%= listing._id %>?_method=put" >
                <div class="mb-3">
                    <label class="form-label" for="title">Title :</label><br>
                    <input class="form-control" type="text" name="listing[title]" value="<%= listing.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description :</label><br>
                    <textarea class="form-control" name="listing[description]" id="" cols="80" rows="2"><%= listing.description %></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image :</label><br>
                    <textarea class="form-control" name="listing[image]" id="" cols="80" rows="3"><%= listing.image %></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location :</label><br>
                    <input class="form-control" type="text" name="listing[location]" value="<%= listing.location %>">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label class="form-label" for="price">Price :</label><br>
                        <input class="form-control" type="number" name="listing[price]" value="<%= listing.price %>">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label class="form-label" for="country">Country :</label><br>
                        <input class="form-control" type="text" name="listing[country]" value="<%= listing.country %>">
                    </div>
                </div>
                <button type="submit" class=" mt-3 btn btn-dark edit-btn">&nbsp;&nbsp;Edit&nbsp;&nbsp;</button><br><br>
            </form>
        </div>
    </div>
</body>
