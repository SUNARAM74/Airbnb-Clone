<% layout('/layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create A New Listing </h3>
            <form action="/listings/create" method="post">
                <div class="mb-3">
                    <label class="form-label" for="title">Title :</label><br>
                    <input class="form-control" type="text" name="listing[title]" placeholder="Enter Title">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description :</label><br>
                    <textarea class="form-control" name="listing[description]" placeholder="Enter Description" cols="60" rows="1"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location :</label><br>
                    <input class="form-control" type="text" name="listing[location]" placeholder="Enter Location">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4"> 
                        <label class="form-label" for="price">Price :</label><br>
                        <input class="form-control" type="number" name="listing[price]" placeholder="Enter Price">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label class="form-label" for="country">Country :</label><br>
                        <input class="form-control" type="text" name="listing[country]" placeholder="Enter Country">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Link:</label><br>
                    <input class="form-control" type="text" name="listing[image]" id="" placeholder="Enter image URL/LINK">
                </div>
                <button type="submit" class="mt-3 btn btn-dark add-btn">&nbsp;&nbsp;Add&nbsp;&nbsp;</button><br><br>
            </form>
        </div>
    </div>
</body>
